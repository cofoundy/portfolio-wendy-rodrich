---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="py-12 md:py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="mb-10 fade-in">
        <h2 class="text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.accentColor}`}>Education & Certifications</h2>
        <div class="w-16 h-1 mt-3 rounded-full" style={`background-color: ${siteConfig.highlightColor}`}></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {siteConfig.education.map((edu, index) => (
          <div
            class="fade-in card-hover flex gap-4 p-4 rounded-xl bg-white"
            style={`border: 1px solid ${siteConfig.accentColor}12; transition-delay: ${index * 120}ms`}
          >
            <!-- Icon -->
            <div
              class="w-12 h-12 rounded-lg flex items-center justify-center text-xl flex-shrink-0"
              style={`background-color: ${siteConfig.highlightColor}15`}
            >
              ðŸŽ“
            </div>

            <div class="flex-1 min-w-0">
              <h3 class="text-base font-semibold" style={`color: ${siteConfig.accentColor}`}>
                <Fragment set:html={edu.degree} />
              </h3>
              <p class="text-sm" style={`color: ${siteConfig.highlightColor}`}>{edu.school}</p>
              {edu.dateRange && (
                <p class="text-xs mt-1 text-gray-500">{edu.dateRange}</p>
              )}
              {edu.achievements && edu.achievements.length > 0 && (
                <ul class="mt-2 space-y-1">
                  {edu.achievements.map((a) => (
                    <li class="flex items-start text-xs text-gray-600">
                      <span class="inline-block w-1 h-1 rounded-full mt-1.5 mr-2 flex-shrink-0" style={`background-color: ${siteConfig.highlightColor}`} />
                      <Fragment set:html={a} />
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
