---
import { siteConfig } from "../config";
---

<section id="about" class="py-12 md:py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Title -->
      <div class="lg:col-span-3 fade-in">
        <h2 class="text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.accentColor}`}>
          About Me
        </h2>
        <div class="w-16 h-1 mt-3 rounded-full" style={`background-color: ${siteConfig.highlightColor}`}></div>
      </div>

      <!-- Bio -->
      <div class="lg:col-span-9 fade-in space-y-4" style="transition-delay: 150ms">
        {siteConfig.aboutMe.split('\n\n').map((paragraph) => (
          <p class="text-base md:text-lg text-gray-700 leading-relaxed">
            <Fragment set:html={paragraph} />
          </p>
        ))}
      </div>
    </div>

    <!-- Skills -->
    <div class="mt-10 pt-8 border-t fade-in" style={`border-color: ${siteConfig.accentColor}15; transition-delay: 250ms`}>
      <h3 class="text-sm font-semibold uppercase tracking-wider mb-4" style={`color: ${siteConfig.accentColor}`}>
        Expertise
      </h3>
      <div class="flex flex-wrap gap-2">
        {siteConfig.skills.map((skill, i) => (
          <span
            class="fade-in skill-hover px-4 py-2 rounded-full text-sm font-medium cursor-default"
            style={`background-color: ${siteConfig.accentColor}08; color: ${siteConfig.accentColor}; border: 1px solid ${siteConfig.accentColor}25; transition-delay: ${300 + i * 70}ms`}
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
