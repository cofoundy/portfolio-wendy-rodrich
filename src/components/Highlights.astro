---
import { siteConfig } from "../config";
const hasHighlights = siteConfig.highlights && siteConfig.highlights.length > 0;
---

{hasHighlights && (
  <section class="py-10 md:py-12 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="fade-in">
        <h3 class="text-2xl md:text-3xl font-bold mb-6" style={`color: ${siteConfig.accentColor}`}>
          Highlights
        </h3>
        <div class="w-16 h-1 mb-8 rounded-full" style={`background-color: ${siteConfig.highlightColor}`}></div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {siteConfig.highlights.map((item, i) => (
          <div
            class="fade-in flex items-center gap-3 p-4 rounded-xl bg-gray-50"
            style={`border: 1px solid ${siteConfig.accentColor}12; transition-delay: ${i * 100}ms`}
          >
            <div
              class="w-2 h-2 rounded-full flex-shrink-0"
              style={`background-color: ${siteConfig.highlightColor}`}
            />
            <span class="text-sm md:text-base text-gray-700">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
